{
  "name": "@tiger440/n8n-ready",
  "version": "0.1.1",
  "description": "CLI tool to bootstrap self-hosted n8n environments in seconds",
  "type": "module",
  "bin": {
    "n8n-ready": "packages/cli/dist/index.js"
  },
  "files": [
    "packages/cli/dist"
  ],
  "scripts": {
    "build": "tsup packages/cli/src/index.ts --format esm --dts --out-dir packages/cli/dist --external commander --external fs-extra --external public-ip --external node-fetch && cp -r packages/cli/templates packages/cli/dist/",
    "prepare": "pnpm build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "dev": "pnpm -r dev",
    "test:local": "node packages/cli/dist/index.js --help",
    "pack:test": "npm pack --dry-run"
  },
  "keywords": [
    "n8n",
    "cli",
    "docker",
    "docker-compose",
    "automation",
    "workflow",
    "self-hosted",
    "bootstrap"
  ],
  "author": {
    "name": "n8n-ready contributors"
  },
  "license": "MIT",
  "homepage": "https://github.com/tiger440/n8n-ready#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiger440/n8n-ready.git"
  },
  "bugs": {
    "url": "https://github.com/tiger440/n8n-ready/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@8.0.0",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "commander": "^11.0.0",
    "fs-extra": "^11.0.0",
    "node-fetch": "^3.0.0",
    "public-ip": "^6.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "tsup": "^7.0.0"
  }
}